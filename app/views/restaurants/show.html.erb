<h1><strong> <%= @restaurant.name %></strong></h1>
<h2><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant_category %></p>
<br>
<h3><strong>Reviews</strong></h3>
<% @restaurant.reviews.each do |review| %>
<div class="list">
  <ul>
    <li><%= review.content %></li>
    <li>Rating: <%= review.rating %></li>
  </ul>
</div>
<% end %>

<br>
<%= link_to "Edit restaurant", edit_restaurant_path, class: "btn btn-light" %>
<br>
<br>
<%= link_to "Delete restaurant", restaurant_path(@restaurant), method: :delete, class: "btn btn-light"%>
<br>
<br>
<%= link_to "Add new review", new_restaurant_review_path(@restaurant), class: "btn btn-light" %>
<br>
<br>
<%= link_to "Back to TOP", restaurants_path, class: "btn btn-light" %>
